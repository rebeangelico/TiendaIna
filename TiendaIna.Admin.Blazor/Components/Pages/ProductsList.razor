@page "/products"
@inherits ProductsListModel

<h3>Productos</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in products)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>
                    <button class="btn btn-link p-0"  title="Editar">
                        <i class="bi bi-pencil-fill"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
