@*BARRA LATERAL*@

<div class="container-fluid">
    <div class="row">

        <!-- Barra lateral -->
        <div class="col-md-3">
            <aside class="table-borderless p-3" style="min-height: 100vh;">


                <h5 class="mb-4">Categorías</h5>
                <ul class="nav flex-column">

                    <!-- PERFUMERIA -->
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#subPERFUMERIA" role="button" aria-expanded="false" aria-controls="subElectronica">
                            PERFUMERIA
                        </a>
                        <div class="collapse" id="subPERFUMERIA">
                            <ul class="nav flex-column ms-3">
                                <li><a class="nav-link" href="/Categorias/PERFUMERIA/PERFUMES MASCULINOS">PERFUMES MASCULINOS</a></li>
                                <li><a class="nav-link" href="/Categorias/PERFUMERIA/PERFUMES FEMENINOS">PERFUMES FEMENINOS</a></li>
                                <li><a class="nav-link" href="/Categorias/PERFUMERIA/PERFUMES UNISEX">PERFUMES UNISEX</a></li>
                                <li><a class="nav-link" href="/Categorias/PERFUMERIA/PERFUMES INFANTILES">PERFUMES INFANTILES</a></li>
                            </ul>
                        </div>
                    </li>

                    <!-- PRODUCTOS CAPILARES -->
                    <li class="nav-item">
                        <a class="nav-link" href="/CATEGORIAS/PRODUCTOSCCAPILARES">PRODUCTOS CAPILARES</a>
                    </li>

                </ul>
            </aside>
        </div>

        @*contenedor espacio fuera de la barra lateral*@

        <div class="col-md-9">


            @*Prueba ofertas semanales*@
            <div class="alert alert-dark custom-alertSale text-center" role="alert">
                🔥 OFERTAS SEMANALES 🔥
            </div>




            @*Prueba de ofertas*@


            @*logica destinada al ProductBoxViewModel *@
            <div class="row justify-content-center fondo-ofertas py-4">
                @if (productos != null && productos.Any(p => p.IsOutstanding == true)) {
                    foreach (var p in productos.Where(p => p.IsOutstanding == true).Take(3)) {

                        var categoriees = p.Categories?.ToList() ?? new List<CategoryModel>();
                        var descuento = 0.20;
                        double precioConDescuento = 0;
                        var precioFormateado = precioConDescuento.ToString("F2", System.Globalization.CultureInfo.InvariantCulture);

                        if (p.Price.HasValue) {
                            precioConDescuento = p.Price.Value - (p.Price.Value * descuento);
                        }


                        <div class="col-12 col-md-4 mb-4">
                            <div class="card tarjeta-compacta">
                                <div class="imagen-contenedor position-relative">
                                    <img src="@p.Imagen" class="imagen-ajustada" alt="@p.Name">
                                    <span class="badge bg-danger position-absolute top-0 start-50 translate-middle-x fs-3 px-3 py-2">SALE 15% OFF</span>
                                </div>

                                <div class="nombre-contenedorOfertas">
                                    <h5 class="card-title">@p.Name</h5>
                                </div>

                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        Categorías:
                                        @if (categoriees.Any()) {
                                            for (int i = 0; i < categoriees.Count; i++) {
                                                var cat = categoriees[i];
                                                <a href="/Categoria/@cat.Id" class="text-decoration-none">@cat.Name</a>
                                                if (i < categoriees.Count - 1) {
                                                    <text>, </text>
                                                }
                                            }
                                        } else {
                                            <span>—</span>
                                        }
                                    </li>
                                    <li class="list-group-item">
                                        Marca:
                                        <a href="/Perfumes/Marca/@p.Brand.Name" class="badge bg-primary text-decoration-none">
                                            @p.Brand.Name
                                        </a>
                                    </li>
                                    <li class="list-group-item">
                                        Precio:
                                        <span class="badge bg-secondary text-decoration-line-through">$@p.Price</span>
                                        <span class="badge bg-success ms-2">$@precioFormateado</span>
                                    </li>
                                    <li class="list-group-item">
                                        Género:
                                        <a href="/Perfumes/Genero/@p.Gender" class="badge bg-primary text-decoration-none">
                                            @p.Gender
                                        </a>
                                    </li>
                                </ul>
                                <div class="text-center" style="padding: 2px 0;">
                                    <a href="/Product/@p.Id" class="card-link" style="font-size: 1.1rem;">Ver producto</a>
                                </div>
                            </div>
                        </div>
                    }
                } else {
                    <div class="text-center text-white">
                        <p>No hay ofertas destacadas en este momento.</p>
                    </div>
                }
            </div>











            @*CARTEL DE PRODUCTOS*@
            <div class="alert alert-dark custom-alert" role="alert">
                NUESTROS PRODUCTOS
            </div>


            @*TABLAS PRODUCTOS VISTA PREVIA*@

            <div class="row">
                @foreach (var p in productos) {
                    <div class="col-6 col-md-4 mb-4">
                        <vc:product-box product="@p" show-categories="false"></vc:product-box>
                    </div>
                }
            </div>
            @*Agregar paginacion de productos*@
        </div>
    </div>
</div>


